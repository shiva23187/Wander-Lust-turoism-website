<% layout("/layouts/boilerPlates.ejs") %>

<body>
  <div class="row">
    <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-12">
      <h3 class="mt-5 mb-4"><span style="color: #fe424d;">Edit</span> This Listing</h3>

      <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation p-4 shadow rounded-4 bg-light" enctype="multipart/form-data">

        <div class="mb-4">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" class="form-control" type="text" value="<%= listing.title %>" required />
          <div class="invalid-feedback">Please give a title</div>
        </div>

        <div class="mb-4">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" rows="4" required><%= listing.description %></textarea>
          <div class="invalid-feedback">Please enter a small description</div>
        </div>

        <div class="mb-4">
          <label class="form-label">Current Image</label><br>
          <img src="<%= listing.image?.url || '/images/fallback.jpg' %>" class="img-thumbnail" style="max-height: 200px;">
        </div>

        <div class="mb-4">
          <label for="image" class="form-label">Upload New Image</label>
          <input type="file" name="listing[image]" class="form-control" />
          <div class="invalid-feedback">Upload a new image file</div>
        </div>

        <!-- Category -->
        <div class="mb-4">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" class="form-control" required>
            <option value="">Select a category</option>
            <option value="Trending" <%= listing.category === "Trending" ? "selected" : "" %>>Trending</option>
            <option value="Room" <%= listing.category === "Room" ? "selected" : "" %>>Room</option>
            <option value="Iconic Cities" <%= listing.category === "Iconic Cities" ? "selected" : "" %>>Iconic Cities</option>
            <option value="Hostels" <%= listing.category === "Hostels" ? "selected" : "" %>>Hostels</option>
            <option value="Guest House" <%= listing.category === "Guest House" ? "selected" : "" %>>Guest House</option>
            <option value="Swimming Pools" <%= listing.category === "Swimming Pools" ? "selected" : "" %>>Swimming Pools</option>
            <option value="Shops" <%= listing.category === "Shops" ? "selected" : "" %>>Shops</option>
            <option value="Camping" <%= listing.category === "Camping" ? "selected" : "" %>>Camping</option>
          </select>
          <div class="invalid-feedback">Please select a category.</div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" value="<%= listing.price %>" class="form-control" name="listing[price]" required />
            <div class="invalid-feedback">Price cannot be empty</div>
          </div>
          <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" value="<%= listing.country %>" class="form-control" name="listing[country]" required />
            <div class="invalid-feedback">Country cannot be empty</div>
          </div>
        </div>

        <div class="mb-4">
          <label for="location" class="form-label">Location</label>
          <input type="text" value="<%= listing.location %>" class="form-control" name="listing[location]" required />
          <div class="invalid-feedback">Location cannot be empty</div>
        </div>

        <div class="mb-4">
          <label for="whatsapp" class="form-label">WhatsApp Contact Number</label>
          <input type="tel" id="whatsapp" value="<%= listing.whatsapp %>" name="listing[whatsapp]" class="form-control" pattern="[0-9]{10}" required>
          <div class="invalid-feedback">Please enter a valid 10-digit number.</div>
        </div>

        <div class="text-end">
          <button class="btn btn-danger px-4 py-2 rounded-pill">Edit Listing</button>
        </div>
      </form>
    </div>
  </div>
</body>
